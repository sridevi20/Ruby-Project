<h1>Customers</h1>

<table>
  <tr>
    <th>First Name</th>
    <th></th>
    <th>Last Name</th>
    <th></th>
    <th>Country</th>
    <th></th>
    <th>City</th>
    <th></th>
    <th>Age</th>
  </tr>
  <tr>
    <td><%= @customer.first_name%></td>
    <td>|</td>
    <td><%= @customer.last_name %></td>
    <td>|</td>
    <td><%= @customer.country %></td>
    <td>|</td>
    <td><%= @customer.city %></td>
    <td>|</td>
    <td><%= @customer.age%></td>
  </tr>
</table>

<h3>Vehicles:</h3>

<ul>
  <% @customer.vehicles.each do |vehicle| %>

  <li>MAKE    :   <%= vehicle.make %></li>
  <li>MODEL   :   <%= vehicle.model %></li>
  <li>COLOUR  :   <%= vehicle.colour %></li>
  <li>SEAT CAPACITY  :   <%= vehicle.seat_capacity %></li>
  <li>FUEL TYPE   :   <%= vehicle.fuel_type%></li>
  <li>DAILY PRICE   :   <%= vehicle.daily_price %></li>
   <br>
   <br>
   <br>

  <% end %>

</ul>
