<h1>Customers</h1>

<table>
  <tr>
    <th>First Name</th>
    <th></th>
    <th>Last Name</th>
    <th></th>
    <th>Country</th>
    <th></th>
    <th>City</th>
    <th></th>
    <th>Age</th>
  </tr>
  <tr>
    <td><%= @customer.first_name%></td>
    <td>|</td>
    <td><%= @customer.last_name %></td>
    <td>|</td>
    <td><%= @customer.country %></td>
    <td>|</td>
    <td><%= @customer.city %></td>
    <td>|</td>
    <td><%= @customer.age%></td>
  </tr>
</table>

<h3>Vehicles:</h3>

<ul>
  <% @customer.vehicles.each do |vehicle| %>

  <li>Make::<%= vehicle.make %></li>
  <li>Model::<%= vehicle.model %></li>
  <li>Colour::<%= vehicle.colour %></li>
  <li>Seat Capacity::<%= vehicle.seat_capacity %></li>
  <li>Fuel Type::<%= vehicle.fuel_type%></li>
  <li>Daily Price::<%= vehicle.daily_price %></li>


  <% end %>

</ul>
